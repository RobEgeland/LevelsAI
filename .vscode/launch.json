{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\${fileBasenameNoExtension}.exe",  // Path to the executable
            "args": [],                    // Command-line arguments (if needed)
            "stopAtEntry": false,          // Do not stop at the entry point
            "cwd": "${workspaceFolder}",   // Set working directory to the project folder
            "environment": [],
            "externalConsole": true,       // Launches the program in an external console
            "preLaunchTask": "C/C++: cl.exe build active file",  // Build task to run before debugging
            "internalConsoleOptions": "neverOpen"  // Use external console for output
        }
    ]
}
